                "coinDecimals": {
                    "type": "number"
                },
                "coinDenom": {
                    "type": "string"
                },
                "coinGeckoId": {
                    "description": "This is used to fetch asset's fiat value from coingecko.\nYou can get id from https://api.coingecko.com/api/v3/coins/list.",
