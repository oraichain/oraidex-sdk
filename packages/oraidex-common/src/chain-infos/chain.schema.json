        "coinType": {
            "description": "This is the coin type in slip-044.\nThis is used for fetching address from ENS if this field is set.\n\n** Use the `bip44.coinType` field to set the coin type to generate the address. **",
            "type": "number"
        },
        "currencies": {
            "items": {
                "$ref": "#/definitions/BridgeAppCurrency"
